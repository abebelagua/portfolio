---
const navItems = [
	{ name: 'About', href: '#about' },
	{ name: 'Skills', href: '#skills' },
	{ name: 'Projects', href: '#projects' },
	{ name: 'Contact', href: '#contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-slate-900/80 backdrop-blur-md border-b border-purple-500/20">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center h-16">
			<a href="/" class="text-xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
				Portfolio
			</a>
			<div class="hidden md:flex space-x-8">
				{navItems.map((item) => (
					<a
						key={item.name}
						href={item.href}
						class="text-gray-300 hover:text-purple-400 transition-colors duration-200 font-medium"
					>
						{item.name}
					</a>
				))}
			</div>
			<a
				href="#resume"
				class="px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg hover:from-purple-600 hover:to-pink-600 transition-all duration-200 font-medium shadow-lg shadow-purple-500/50"
			>
				Resume
			</a>
		</div>
	</div>
</nav>

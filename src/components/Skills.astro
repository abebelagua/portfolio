---
interface Props {
	skills: string[];
}

const { skills } = Astro.props;
---

<section id="skills" class="py-20 px-4 sm:px-6 lg:px-8 bg-slate-900/30">
	<div class="max-w-7xl mx-auto">
		<div class="text-center mb-16">
			<h2 class="text-4xl md:text-5xl font-bold mb-4">
				<span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
					Technical Skills
				</span>
			</h2>
			<p class="text-gray-400 text-lg max-w-2xl mx-auto">
				Technologies and tools I work with
			</p>
		</div>
		<div class="flex flex-wrap justify-center gap-4">
			{skills.map((skill) => (
				<span
					key={skill}
					class="px-6 py-3 bg-gradient-to-r from-purple-500/20 to-pink-500/20 border border-purple-500/30 rounded-full text-gray-300 hover:text-purple-400 hover:border-purple-500/50 transition-all duration-200 font-medium shadow-lg hover:shadow-purple-500/20"
				>
					{skill}
				</span>
			))}
		</div>
	</div>
</section>
